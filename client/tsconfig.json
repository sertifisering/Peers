{
  "compilerOptions": {
    "target": "ES2020", // Specify ECMAScript target version
    "useDefineForClassFields": true, // Use define property for class fields
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Specify library files to be included in the compilation
    "module": "ESNext", // Specify module code generation
    "skipLibCheck": true, // Skip type checking of declaration files

    /* Bundler mode */
    "moduleResolution": "bundler", // Module resolution strategy
    "allowImportingTsExtensions": true, // Allow importing TypeScript files with explicit extensions
    "resolveJsonModule": true, // Include modules imported with .json extension
    "isolatedModules": true, // Ensure TypeScript files are treated as isolated modules
    "noEmit": true, // Do not emit compiler output files
    "jsx": "react-jsx", // JSX code generation mode for React

    /* Linting */
    "strict": true, // Enable all strict type-checking options
    "noUnusedLocals": true, // Report errors on unused locals
    "noUnusedParameters": true, // Report errors on unused parameters
    "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statements

    /* Path mapping */
    "baseUrl": "./src", // Base directory for resolving non-relative module names
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],      
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"]
    }
  },
  "include": ["src"], // Include files in src directory
  "references": [{ "path": "./tsconfig.node.json" }] // Reference to another tsconfig file
}
